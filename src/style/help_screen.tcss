/* 帮助文档屏幕样式 */

#help-container {
    width: 100%;
    height: 100%;
    align: center middle;
}

#help-viewer {
    width: 100%;
    height: 100%;
}

/* 加载状态 */
#help-loading {
    margin: 2 0;
}

#help-loading-text {
    text-align: center;
    color: $text-muted;
    margin: 1 0;
}

/* 隐藏类 */
.hidden {
    display: none;
}
